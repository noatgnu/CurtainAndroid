<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light theme -->
    <style name="Theme.Curtain" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (Bootstrap primary) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color (Bootstrap secondary) -->
        <item name="colorSecondary">@color/info</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Surface colors for light mode -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="android:colorBackground">@color/light</item>
        <!-- Transparent system bars for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/on_surface_light</item>
        <item name="android:textColorSecondary">@color/on_surface_variant_light</item>
        <!-- Button text colors for proper contrast -->
        <item name="materialButtonStyle">@style/Widget.Curtain.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Curtain.Button.Outlined</item>
        <!-- TabLayout styling for light mode -->
        <item name="tabStyle">@style/Widget.Curtain.TabLayout.Tab</item>
        <!-- Error color -->
        <item name="colorError">@color/danger</item>
    </style>

    <!-- Button style with proper text contrast for light mode -->
    <style name="Widget.Curtain.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text_color_light</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Widget.Curtain.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/info</item>
    </style>

    <!-- Outlined button style for light mode -->
    <style name="Widget.Curtain.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/button_text_color_outlined_light</item>
        <item name="strokeColor">@color/primary</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <!-- Text button style for light mode -->
    <style name="Widget.Curtain.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_text_color_outlined_light</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <!-- TabLayout tab style for light mode -->
    <style name="Widget.Curtain.TabLayout.Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/on_surface_variant_light</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabRippleColor">@color/primary</item>
    </style>
</resources>