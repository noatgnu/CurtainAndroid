<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme -->
    <style name="Theme.Curtain" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (Bootstrap primary - same in dark mode) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color (Bootstrap secondary) -->
        <item name="colorSecondary">@color/info</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface colors for dark mode -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="android:colorBackground">@color/dark</item>
        <!-- Transparent system bars for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Text colors for dark mode -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <!-- TextView default text color -->
        <item name="android:textColor">@color/text_body_dark</item>
        <!-- Fix inverse text colors for dark mode -->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <!-- Override button text colors globally -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Button text colors for proper contrast -->
        <item name="materialButtonStyle">@style/Widget.Curtain.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Curtain.Button.Outlined</item>
        <!-- TabLayout styling for dark mode -->
        <item name="tabStyle">@style/Widget.Curtain.TabLayout.Tab</item>
        <!-- Error color -->
        <item name="colorError">@color/danger</item>
    </style>

    <!-- Button style with proper text contrast for dark mode -->
    <style name="Widget.Curtain.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Widget.Curtain.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/info</item>
    </style>

    <!-- Outlined button style for dark mode -->
    <style name="Widget.Curtain.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/on_surface_variant_dark</item>
        <item name="rippleColor">@color/on_surface_variant_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Text button style for dark mode -->
    <style name="Widget.Curtain.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_text_color_outlined</item>
        <item name="rippleColor">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- TabLayout tab style for dark mode -->
    <style name="Widget.Curtain.TabLayout.Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/text_secondary_dark</item>
        <item name="tabSelectedTextColor">@color/text_primary_dark</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabRippleColor">@color/primary</item>
    </style>
    
    <!-- Override the default Material Components outlined button style for dark mode -->
    <style name="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/on_surface_variant_dark</item>
        <item name="rippleColor">@color/on_surface_variant_dark</item>
    </style>
</resources>